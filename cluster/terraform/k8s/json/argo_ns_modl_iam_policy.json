{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecr:BatchGetImage",
        "ecr:BatchCheckLayerAvailability",
        "ecr:CompleteLayerUpload",
        "ecr:GetDownloadUrlForLayer",
        "ecr:InitiateLayerUpload",
        "ecr:PutImage",
        "ecr:UploadLayerPart",
        "ecr:GetAuthorizationToken",
        "ecr:DescribeRepositories",
        "ecr:ListTagsForResource",
        "ecr:CreateRepository",
        "ecr:GetLifecyclePolicy",
        "s3:GetBucketOwnershipControls",
        "acm:ListCertificates"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject"],
      "Resource": ["arn:aws:s3:::curi-modl-v2-workflows", "arn:aws:s3:::curi-modl-v2-workflows/*"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObjectAcl",
        "s3:GetBucketObjectLockConfiguration",
        "s3:GetObjectVersionTagging",
        "s3:GetBucketVersioning",
        "s3:GetBucketAcl",
        "s3:GetObjectTorrent",
        "s3:GetBucketCORS",
        "s3:GetBucketLocation",
        "s3:GetObjectVersion",
        "s3:GetBucketRequestPayment",
        "s3:GetObjectTagging",
        "s3:GetMetricsConfiguration",
        "s3:GetBucketPublicAccessBlock",
        "s3:ListBucket",
        "s3:GetAccelerateConfiguration",
        "s3:GetBucketPolicy",
        "s3:GetEncryptionConfiguration",
        "s3:DeleteObjectVersion",
        "s3:GetBucketLogging",
        "s3:ListBucketVersions",
        "s3:GetAnalyticsConfiguration",
        "s3:GetObjectVersionForReplication",
        "s3:GetLifecycleConfiguration",
        "s3:GetInventoryConfiguration",
        "s3:GetBucketTagging",
        "s3:PutObject",
        "s3:GetObject",
        "s3:GetObjectVersionTagging",
        "s3:GetObjectAcl",
        "s3:GetBucketObjectLockConfiguration",
        "s3:GetObjectVersionAcl",
        "s3:PutObjectTagging",
        "s3:DeleteObject",
        "s3:DeleteObjectTagging",
        "s3:GetBucketPolicyStatus",
        "s3:GetObjectRetention",
        "s3:GetBucketWebsite",
        "s3:DeleteObjectVersionTagging",
        "s3:GetObjectLegalHold",
        "s3:GetBucketNotification",
        "s3:GetReplicationConfiguration"
      ],
      "Resource": [
        "arn:aws:s3:::curi-eks-modl-cluster-tf-state",
        "arn:aws:s3:::curi-eks-modl-cluster-tf-state/*",
        "arn:aws:s3:::modl-main-firmware",
        "arn:aws:s3:::modl-main-firmware/*",
        "arn:aws:s3:::modl-channel-firmware",
        "arn:aws:s3:::modl-channel-firmware/*",
        "arn:aws:s3:::modl-mantarray-logs",
        "arn:aws:s3:::modl-mantarray-logs/*"
      ]
    }
  ]
}
